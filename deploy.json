{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "webAppName": {
            "type": "string",
            "metadata": {
                "description": "Web App Name"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2020-06-01",
            "name": "[concat(parameters('webAppName'), 'ServicePlan')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "F1",
                "tier": "Free"
            },
            "properties": {
                "name": "[concat(parameters('webAppName'), 'ServicePlan')]"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2020-06-01",
            "name": "[parameters('webAppName')]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', concat(parameters('webAppName'), 'ServicePlan'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', concat(parameters('webAppName'), 'ServicePlan'))]",
                "siteConfig": {
                    "alwaysOn": true,
                    "scmType": "None"
                }
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "resources": [
                {
                    "name": "authsettings",
                    "type": "config",
                    "apiVersion": "2020-06-01",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites', parameters('webAppName'))]"
                    ],
                    "properties": {
                        "enabled": true,
                        "unauthenticatedClientAction": "RedirectToLoginPage",
                        "defaultProvider": "AzureActiveDirectory"
                    }
                }
            ]
        }
    ]
}